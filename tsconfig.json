{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "sourceMap": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}